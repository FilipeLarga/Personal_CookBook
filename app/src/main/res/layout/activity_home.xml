<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity"
    android:id="@+id/home_layout"
    android:theme="@style/AppTheme"
    >

    <ImageView
        android:id="@+id/home_background_ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CookBook"
        app:layout_constraintBottom_toTopOf="@id/home_add_recipe_Button"
        app:layout_constraintLeft_toLeftOf="@id/home_background_ImageView"
        app:layout_constraintRight_toRightOf="@id/home_background_ImageView"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/home_add_recipe_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_button_selector"
        android:drawableStart="@drawable/ic_playlist_add_black_24dp"
        android:onClick="startAddRecipeActivity"
        android:paddingEnd="40dp"
        android:paddingStart="16dp"
        android:text="@string/home_add_recipe"
        app:layout_constraintBottom_toBottomOf="@id/home_background_ImageView"
        app:layout_constraintLeft_toLeftOf="@id/home_background_ImageView"
        app:layout_constraintRight_toRightOf="@id/home_background_ImageView"
        app:layout_constraintTop_toTopOf="@id/home_background_ImageView"
        android:fontFamily="@font/worksans_black"/>

    <Button
        android:id="@+id/home_view_recipe_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_view_recipes"
        android:background="@drawable/round_button_selector"
        android:drawableStart="@drawable/ic_toc_black_24dp"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/home_add_recipe_Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:onClick="startListRecipesActivity"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What can i make big texttt"
        android:background="@drawable/round_button_selector"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/home_view_recipe_Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="one"
        android:background="@drawable/round_button_selector"
        android:drawableStart="@drawable/ic_ac_unit_black_24dp"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_photo_credits"
        app:layout_constraintLeft_toLeftOf="@id/home_background_ImageView"
        app:layout_constraintRight_toRightOf="@id/home_background_ImageView"
        app:layout_constraintBottom_toBottomOf="@id/home_background_ImageView"
        android:layout_margin="8dp"/>
</android.support.constraint.ConstraintLayout>